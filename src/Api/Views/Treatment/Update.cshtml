@model Domain.Entities.Treatment
@{
    ViewData["Title"] = "Editar";
}

<div>
  <h2 class="display-4">Editar</h2>
</div>
      <form asp-controller="Treatment" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id"></input>
        <div class="form-group">
            <label for="name">Observação</label>
            <input type="text" asp-for="Comment" class="form-control" placeholder="Observação">
            @Html.ValidationMessageFor(x => x.Comment)
        </div>
        <div class="form-group">
            <label for="name_animal">Nome (Animal)</label>
            <input type="text" asp-for="Animal.Name" class="form-control" placeholder="Nome do animal">
            @Html.ValidationMessageFor(x => x.Animal.Name)
        </div>
        <div class="form-group">
            <label for="breed">Raça (Animal)</label>
            <input type="text" asp-for="Animal.Breed" class="form-control" placeholder="Raça do animal">
            @Html.ValidationMessageFor(x => x.Animal.Breed)
        </div>
        <div class="form-group">
            <label for="age">Idade (Animal)</label>
            <input type="text" asp-for="Animal.Age" class="form-control" placeholder="Idade do animal">
            @Html.ValidationMessageFor(x => x.Animal.Age)
        </div>
        <div class="form-group">
            <label for="name_veterinary">Veterinário</label>
            <input type="text" asp-for="Veterinary.Name" class="form-control" placeholder="Nome do veterinário">
            @Html.ValidationMessageFor(x => x.Veterinary.Name)
        </div>
        <br />
        <div class="form-group col-md-6">
          <button class="btn btn-success" role="button" type="submit"><i class="glyphicon glyphicon-ok"></i> Salvar</button>
          <a class="btn btn-danger" asp-action="Index" asp-controller="Treatment" role="button"><i class="glyphicon glyphicon-remove"></i> Cancelar</a>
        </div>
      </form>